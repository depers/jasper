<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bravedawn.web.mbg.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="cn.bravedawn.web.mbg.model.Article">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="intro" jdbcType="VARCHAR" property="intro" />
        <result column="path" jdbcType="VARCHAR" property="path" />
        <result column="sign" jdbcType="VARCHAR" property="sign" />
        <result column="author" jdbcType="VARCHAR" property="author" />
        <result column="sha" jdbcType="VARCHAR" property="sha"/>
        <result column="is_show" jdbcType="INTEGER" property="isShow"/>
        <result column="insert_time" jdbcType="TIMESTAMP" property="insertTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>
    <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="cn.bravedawn.web.mbg.model.Article">
        <result column="content" jdbcType="LONGVARCHAR" property="content" />
    </resultMap>
    <sql id="Base_Column_List">
        id, title, intro, content, path, sign, author, sha, is_show, insert_time, update_time
    </sql>

    <select id="selectArticleList" resultType="article">
        SELECT
            id,
            title,
            intro,
            insert_time
        FROM
            article
        where
            is_show = 1
        ORDER BY id DESC
    </select>

    <select id="selectById" resultType="article">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            article
        WHERE
            id = #{articleId}
        AND
            is_show = 1
    </select>

    <select id="selectBySign" resultType="article">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
            article
        WHERE
            sign = #{sign}
    </select>

    <select id="selectCountByMd5" parameterType="string" resultType="int">
        select
            count(*)
        from
            article
        where
            sign = #{sha}
    </select>


    <insert id="insertSelective" parameterType="article" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            article
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">
                title,
            </if>
            <if test="intro != null">
                intro,
            </if>
            <if test="path != null">
                path,
            </if>
            <if test="sign != null">
                sign,
            </if>
            <if test="author != null">
                author,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="sha != null">
                sha,
            </if>
            <if test="isShow != null">
                is_show
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="intro != null">
                #{intro,jdbcType=VARCHAR},
            </if>
            <if test="path != null">
                #{path,jdbcType=VARCHAR},
            </if>
            <if test="sign != null">
                #{sign,jdbcType=VARCHAR},
            </if>
            <if test="author != null">
                #{author,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                #{content,jdbcType=LONGVARCHAR},
            </if>
            <if test="sha != null">
                #{sha,jdbcType=LONGVARCHAR},
            </if>
            <if test="isShow != null">
                #{isShow,jdbcType=INTEGER}
            </if>
        </trim>
    </insert>

    <update id="updateSelective" parameterType="article">
        update
            article
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="intro != null">
                intro = #{intro},
            </if>
            <if test="author != null">
                author = #{author},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="sha != null">
                sha = #{sha},
            </if>
            <if test="isShow != null">
                is_show = #{isShow},
            </if>
        </set>
        where sign = #{sign}
    </update>

    <select id="selectShaByMd5" resultType="string">
        SELECT
            `sha`
        FROM
            article
        WHERE
            sign = #{sign}
    </select>

</mapper>